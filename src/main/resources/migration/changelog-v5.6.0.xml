    </changeSet>

    <!--
        TODO: Use Liquibase contexts to allow these to be applied to a different datasource?
        TODO: Archive tables?
    -->
    <changeSet id="v5.6.0-8" author="nscuro">
        <sql splitStatements="true">
            CREATE TYPE WORKFLOW_RUN_STATUS AS ENUM (
              'COMPLETED'
            , 'FAILED'
            , 'PENDING'
            , 'RUNNING');
            CREATE TYPE WORKFLOW_TASK_STATUS AS ENUM (
              'COMPLETED'
            , 'FAILED'
            , 'PENDING'
            , 'PENDING_RESUME'
            , 'PENDING_RETRY'
            , 'RUNNING'
            , 'SUSPENDED');
            CREATE TYPE WORKFLOW_EVENT_TYPE AS ENUM (
              'RUN_REQUESTED'
            , 'RUN_QUEUED'
            , 'RUN_STARTED'
            , 'RUN_SUSPENDED'
            , 'RUN_RESUMED'
            , 'RUN_COMPLETED'
            , 'RUN_FAILED_TRANSIENT'
            , 'RUN_FAILED'
            , 'ACTIVITY_RUN_REQUESTED'
            , 'ACTIVITY_RUN_QUEUED'
            , 'ACTIVITY_RUN_STARTED'
            , 'ACTIVITY_RUN_COMPLETED'
            , 'ACTIVITY_RUN_FAILED_TRANSIENT'
            , 'ACTIVITY_RUN_FAILED');
        </sql>

        <createTable tableName="WORKFLOW_SCHEDULE">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="WORKFLOW_SCHEDULE_PK"/>
            </column>
            <column name="NAME" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="CRON" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="WORKFLOW" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="ARGUMENTS" type="JSONB"/>
            <column name="CREATED_AT" type="TIMESTAMPTZ(3)">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="TIMESTAMPTZ(3)"/>
            <column name="LAST_TRIGGER" type="TIMESTAMPTZ(3)"/>
            <column name="NEXT_TRIGGER" type="TIMESTAMPTZ(3)"/>
        </createTable>

        <createTable tableName="WORKFLOW_RUN">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="WORKFLOW_RUN_PK"/>
            </column>
            <column name="WORKFLOW_NAME" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="WORKFLOW_VERSION" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="STATUS" type="WORKFLOW_RUN_STATUS">
                <constraints nullable="false"/>
            </column>
            <column name="PRIORITY" type="SMALLINT"/>
            <column name="RESULT" type="JSONB"/>
            <column name="FAILURE_DETAILS" type="TEXT"/>
            <column name="CREATED_AT" type="TIMESTAMPTZ(3)">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="TIMESTAMPTZ(3)"/>
            <column name="STARTED_AT" type="TIMESTAMPTZ(3)"/>
            <column name="ENDED_AT" type="TIMESTAMPTZ(3)"/>
        </createTable>

        <createTable tableName="WORKFLOW_RUN_LOG">
            <column name="WORKFLOW_RUN_ID" type="UUID"/>
            <column name="TIMESTAMP" type="TIMESTAMPTZ(3)"/>
            <column name="EVENT_ID" type="UUID"/>
            <column name="EVENT_TYPE" type="WORKFLOW_EVENT_TYPE">
                <constraints nullable="false"/>
            </column>
            <column name="ACTIVITY_RUN_ID" type="UUID"/>
            <column name="ACTIVITY_NAME" type="TEXT"/>
            <column name="ACTIVITY_INVOCATION_ID" type="TEXT"/>
            <column name="ACTIVITY_IS_LOCAL" type="BOOL"/>
            <column name="ARGUMENTS" type="JSONB"/>
            <column name="RESULT" type="JSONB"/>
            <column name="FAILURE_DETAILS" type="TEXT"/>
        </createTable>

        <!-- TODO: Partition by status? -->
        <createTable tableName="WORKFLOW_TASK">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="WORKFLOW_TASK_PK"/>
            </column>
            <column name="STATUS" type="WORKFLOW_TASK_STATUS">
                <constraints nullable="false"/>
            </column>
            <column name="QUEUE" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="PRIORITY" type="SMALLINT"/>
            <column name="SCHEDULED_FOR" type="TIMESTAMPTZ(3)">
                <constraints nullable="false"/>
            </column>
            <column name="WORKFLOW_RUN_ID" type="UUID"/>
            <column name="ACTIVITY_RUN_ID" type="UUID"/>
            <column name="ACTIVITY_NAME" type="TEXT"/>
            <column name="ACTIVITY_INVOCATION_ID" type="TEXT"/>
            <column name="INVOKING_TASK_ID" type="UUID"/>
            <column name="ARGUMENTS" type="JSONB"/>
            <column name="RESULT" type="JSONB"/>
            <column name="FAILURE_DETAILS" type="TEXT"/>
            <column name="ATTEMPT" type="INT"/>
            <column name="CREATED_AT" type="TIMESTAMPTZ(3)">
                <constraints nullable="false"/>
            </column>
            <column name="UPDATED_AT" type="TIMESTAMPTZ(3)"/>
            <column name="STARTED_AT" type="TIMESTAMPTZ(3)"/>
            <column name="ENDED_AT" type="TIMESTAMPTZ(3)"/>
        </createTable>

        <sql splitStatements="true" stripComments="true">
            -- Covering(!) index that serves the WHERE, as well as the ORDER BY
            -- clause of the poll query.
            CREATE INDEX "WORKFLOW_TASK_POLL_IDX" ON "WORKFLOW_TASK" (
              "PRIORITY" DESC NULLS LAST
            , "SCHEDULED_FOR"
            , "CREATED_AT"
            , "STATUS"
            , "QUEUE"
            ) INCLUDE ("ID", "STATUS", "WORKFLOW_RUN_ID")
              WHERE "STATUS" = ANY('{PENDING, PENDING_RETRY, PENDING_RESUME}'::WORKFLOW_TASK_STATUS[]);
        </sql>

        <addPrimaryKey
                tableName="WORKFLOW_RUN_LOG"
                columnNames="WORKFLOW_RUN_ID, TIMESTAMP, EVENT_ID"/>

        <addForeignKeyConstraint
                baseTableName="WORKFLOW_RUN_LOG"
                baseColumnNames="WORKFLOW_RUN_ID"
                constraintName="WORKFLOW_RUN_LOG_WORKFLOW_RUN_FK"
                referencedTableName="WORKFLOW_RUN"
                referencedColumnNames="ID"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="WORKFLOW_TASK"
                baseColumnNames="INVOKING_TASK_ID"
                constraintName="WORKFLOW_TASK_INVOKING_TASK_FK"
                referencedTableName="WORKFLOW_TASK"
                referencedColumnNames="ID"
                onDelete="CASCADE"/>

        <createIndex tableName="WORKFLOW_SCHEDULE" indexName="WORKFLOW_SCHEDULE_NAME_IDX" unique="true">
            <column name="NAME"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>