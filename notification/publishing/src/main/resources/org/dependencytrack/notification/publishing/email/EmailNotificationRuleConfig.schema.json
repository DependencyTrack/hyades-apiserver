{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "javaInterfaces": [
    "org.dependencytrack.plugin.api.config.RuntimeConfig"
  ],
  "properties": {
    "smtp": {
      "type": "object",
      "title": "SMTP Configuration",
      "properties": {
        "host": {
          "type": "string",
          "title": "SMTP Host",
          "minLength": 1
        },
        "port": {
          "type": "integer",
          "title": "SMTP Port",
          "minimum": 1
        },
        "username": {
          "type": "string",
          "title": "SMTP Username"
        },
        "password": {
          "type": "string",
          "title": "SMTP Password"
        },
        "sslEnabled": {
          "type": "boolean",
          "title": "SSL / TLS Enabled"
        },
        "startTlsEnabled": {
          "type": "boolean",
          "title": "STARTTLS Enabled"
        }
      },
      "required": [
        "host",
        "port",
        "sslEnabled",
        "startTlsEnabled"
      ]
    },
    "senderAddress": {
      "type": "string",
      "format": "email",
      "title": "Sender Address",
      "minLength": 1
    },
    "subjectPrefix": {
      "type": "string",
      "title": "Subject Prefix"
    },
    "recipientAddresses": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email",
        "minLength": 1
      },
      "uniqueItems": true
    }
  },
  "required": [
    "smtp",
    "senderAddress"
  ]
}